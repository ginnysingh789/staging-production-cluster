{
  "name": "bms",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:staging": "NODE_ENV=staging turbo run build",
    "build:production": "NODE_ENV=production turbo run build",
    "dev": "turbo run dev",
    "dev:staging": "NODE_ENV=staging turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:generate": "pnpm --filter @repo/db prisma generate",
    "db:migrate:dev": "pnpm --filter @repo/db prisma migrate dev",
    "db:migrate:staging": "NODE_ENV=staging pnpm --filter @repo/db prisma migrate deploy",
    "db:migrate:production": "NODE_ENV=production pnpm --filter @repo/db prisma migrate deploy",
    "db:studio": "pnpm --filter @repo/db prisma studio"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
